{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ATAS Market Data Schema",
  "type": "object",
  "description": "ATAS order-flow bar export in UTC, prices in quote currency units, volumes in base units",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Bar close time, ISO8601 with timezone, minute right-closed"
    },
    "open": {
      "type": "number",
      "description": "Open price (quote currency, precision <= 1e-2)"
    },
    "high": {
      "type": "number",
      "description": "High price (quote currency, precision <= 1e-2)"
    },
    "low": {
      "type": "number",
      "description": "Low price (quote currency, precision <= 1e-2)"
    },
    "close": {
      "type": "number",
      "description": "Close price (quote currency, precision <= 1e-2)"
    },
    "volume": {
      "type": "number",
      "minimum": 0,
      "description": "Total traded volume (base currency, precision <= 1e-3)"
    },
    "poc": {
      "type": "number",
      "description": "Point of control (quote currency)"
    },
    "vah": {
      "type": "number",
      "description": "Value area high (quote currency)"
    },
    "val": {
      "type": "number",
      "description": "Value area low (quote currency)"
    },
    "schema_version": {
      "type": "string",
      "const": "v6.3",
      "description": "Schema version identifier"
    },
    "cvd": {
      "type": "number",
      "description": "Cumulative volume delta (base currency)"
    },
    "absorption_detected": {
      "type": ["boolean", "null"],
      "description": "Absorption flag (flattened schema)"
    },
    "absorption_strength": {
      "type": ["number", "null"],
      "description": "Absorption strength (contracts)"
    },
    "absorption_side": {
      "type": ["string", "null"],
      "enum": ["buy", "sell", "neutral", null],
      "description": "Absorption side"
    },
    "absorption": {
      "type": "object",
      "description": "Nested absorption payload",
      "properties": {
        "detected": {
          "type": ["boolean", "null"],
          "description": "Absorption detected flag"
        },
        "strength": {
          "type": ["number", "null"],
          "description": "Absorption strength (contracts)"
        },
        "side": {
          "type": ["string", "null"],
          "enum": ["buy", "sell", "neutral", null],
          "description": "Absorption side"
        }
      },
      "required": [],
      "additionalProperties": true
    }
  },
  "required": [
    "timestamp",
    "open",
    "high",
    "low",
    "close",
    "volume"
  ],
  "additionalProperties": {
    "anyOf": [
      {
        "type": "number"
      },
      {
        "type": "string"
      },
      {
        "type": "boolean"
      },
      {
        "type": "null"
      }
    ]
  },
  "allOf": [
    {
      "anyOf": [
        {
          "required": [
            "absorption_detected",
            "absorption_strength",
            "absorption_side"
          ]
        },
        {
          "required": [
            "absorption"
          ]
        }
      ]
    }
  ]
}
