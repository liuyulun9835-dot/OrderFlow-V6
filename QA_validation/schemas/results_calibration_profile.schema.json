{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "results/calibration_profile.json schema",
  "type": "object",
  "required": ["schema_version", "computed_at", "thresholds", "layers"],
  "additionalProperties": false,
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "computed_at": { "type": "string", "format": "date-time" },
    "data_manifest_hash": { "type": "string" },
    "psi_max_observed": { "type": "number", "minimum": 0 },
    "ks_stat_max_observed": { "type": "number", "minimum": 0 },
    "ece_max_observed": { "type": "number", "minimum": 0 },
    "thresholds": {
      "type": "object",
      "required": ["psi", "ks_stat", "ece"],
      "additionalProperties": false,
      "properties": {
        "psi": { "type": "number" },
        "ks_stat": { "type": "number" },
        "ece": { "type": "number" }
      }
    },
    "layers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "metric_summaries", "segments"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "metric_summaries": {
            "type": "object",
            "required": ["psi", "ks_stat", "ece"],
            "additionalProperties": false,
            "properties": {
              "psi": { "type": "number" },
              "ks_stat": { "type": "number" },
              "ece": { "type": "number" }
            }
          },
          "segments": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["start", "end", "psi", "ks_stat", "ece", "status"],
              "additionalProperties": false,
              "properties": {
                "start": { "type": "string", "format": "date-time" },
                "end": { "type": "string", "format": "date-time" },
                "psi": { "type": "number" },
                "ks_stat": { "type": "number" },
                "ece": { "type": "number" },
                "status": { "type": "string", "enum": ["ok", "violation"] }
              }
            }
          }
        }
      }
    },
    "method_notes": { "type": "string" }
  }
}
